
@model Models.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/FrontEnd/_FrontEndLayout.cshtml";
}
<div class="profile-body">
    <div class="profile-name">Login</div>

    @if (TempData["WrongPass"] != null)
    {
        <p class="alert alert-danger" id="wrongEmail">@TempData["WrongPass"]</p>
    }
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "wrapper-lg", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new { @class = "alert-danger" })
        <div class="form-group">
            @Html.TextBoxFor(m => m.Username, new { @class = "login-input", @placeholder = Resources.Label.Username })

        </div>
        <div class="form-group">
            @Html.PasswordFor(m => m.Password, new { @class = "login-input", @placeholder = Resources.Label.Password })
        </div>

        <div class="form-group">
            <button type="submit" class="btn-default">@Resources.Label.Login</button>
                    </div>


    }
</div>
